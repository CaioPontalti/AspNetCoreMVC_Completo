@model IEnumerable<DevIO.App.ViewModels.ProdutoViewModel>

<table class="table table-hover">
    <thead class="thead-info">
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/cadastroProdutos/@item.Imagem" alt="@item.Imagem" style="width:70px; height:70px" />
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
                </td>
                <td class="align-middle">
                    @item.Valor.ToString("C")
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td class="align-middle">
                    <a asp-controller="Produtos" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info">Edit</a>
                    <a asp-controller="Produtos" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-warning">Details</a>
                    <a asp-controller="Produtos" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" disable-by-claim-name="Produto" disable-by-claim-value="Excluir">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
